{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es5"],

    "allowJs": false,
    "checkJs": false,
    "rootDir": "src",
    "outDir": "build",

    "removeComments": false,
    "importHelpers": true,

    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "sourceMap": false,
    
    "noEmitOnError": true
  },
  "include": [
    "src/**/*"
  ]
}
